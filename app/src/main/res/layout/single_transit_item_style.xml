<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView7"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:src="@drawable/ic_baseline_location_on_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/ThemeColor" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/CustomAddTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:elevation="5dp"
        android:gravity="center_vertical"
        android:hint="Enter Destination"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLines="1"
        android:paddingStart="@dimen/_10sdp"
        android:textColorHint="@color/ThemeColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/CustomAddBtn"
        app:layout_constraintStart_toEndOf="@+id/appCompatImageView7"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/CustomAddBtn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/tab_shape"
        android:src="@drawable/ic_baseline_indeterminate_check_box_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_margin="@dimen/_5sdp"
        android:background="@color/ThemeColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/CustomAddTxt"
        app:layout_constraintStart_toEndOf="@+id/appCompatImageView7"
        app:layout_constraintTop_toBottomOf="@id/CustomAddTxt" />


</androidx.constraintlayout.widget.ConstraintLayout>