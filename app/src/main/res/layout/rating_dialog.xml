<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/curved_bg"
    android:backgroundTint="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/deleteTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17.7dp"
            android:fontFamily="sans-serif-medium"
            android:text="Rate us"
            android:textColor="@color/ThemeColor"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/itemDeleteTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.7dp"
            android:gravity="center"
            android:text="Could you Leave us a Nice review for Us!"
            android:textColor="@color/colorDarkGray"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/deleteTitle"
            app:layout_constraintStart_toStartOf="@+id/deleteTitle"
            app:layout_constraintTop_toBottomOf="@+id/deleteTitle" />


        <com.willy.ratingbar.ScaleRatingBar
            android:id="@+id/simpleRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="42dp"
            android:layoutDirection="ltr"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemDeleteTxt"
            app:srb_clearRatingEnabled="true"
            app:srb_clickable="true"
            app:srb_isIndicator="false"
            app:srb_scrollable="true"
            app:srb_starHeight="30dp"
            app:srb_starPadding="10dp"
            app:srb_starWidth="30dp"
            app:srb_stepSize="1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/rate_us_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/back_btn_bg"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Rate Us"
            android:textColor="@color/white"
            android:maxLines="1"
            android:singleLine="true"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/simpleRatingBar" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/note_now_btn"
            android:layout_width="116.7dp"
            android:layout_height="40dp"
            android:layout_margin="12dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Not now"
            android:textColor="@color/colorDarkGray"
            android:textSize="15sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/rate_us_btn"
            app:layout_constraintStart_toStartOf="@+id/rate_us_btn"
            app:layout_constraintTop_toBottomOf="@+id/rate_us_btn" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>